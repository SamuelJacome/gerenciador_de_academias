 <div class="item">
                <div class="">Avatar URL</div>
                <div class="">
                    <input type="text" name="avatar_url" placeholder="http://" value = "{{ instructor.avatar_url }}">
                </div>
            </div>

            <div class="item">
                <div class="">Instrutor</div>
                <div class="">
                    <input type="text" name="name" placeholder="Nome do Instrutor" value ="{{ instructor.name}}">
                </div>
            </div>

            <div class="item">
                <div class="">Data de nascimento</div>
                <div class=""><input type="date" name="birth" value = "{{ instructor.birth}}"></div>
            </div>

            <div class="item">
                <div class="">Sexo</div>
                    <span class="">
                    <input type="radio"
                           name="gender" 
                           value="M" 
                           {% if instructor.gender == 'M' %}
                           checked
                          {% endif %}>Masculino</span>
                    <span class="">
                    <input type="radio"
                    name="gender"
                    value="F" {% if instructor.gender == 'F' %}
                    checked
                    {% endif %}>Feminino</span>
            </div>


            <div class="item">
                <div class=""> Área de atuação</div>
                <div class=""><input type="text" name="services" value="{{instructor.services}}" placeholder="Separa os serviços prestados por vírgula"></div>
            </div>

           
            <button type="submit">Salvar</button>